<?xml version="1.0" encoding="utf-8"?>
<navigation
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/list"
    app:startDestination="@+id/leaderboard">

    <fragment
            android:id="@+id/leaderboard"
        android:name="me.wopian.module.hatayama.quizScreen.QuizStart"
            android:label="@string/title_quiz"
        tools:layout="@layout/fragment_quiz_start">
        <action
            android:id="@+id/action_quiz_to_question"
            app:destination="@id/quizQuestion"/>
    </fragment>
    <fragment
        android:id="@+id/quizQuestion"
        android:name="me.wopian.module.hatayama.quizScreen.QuizQuestion"
        android:label="@string/title_quiz"
        tools:layout="@layout/fragment_quiz_question">
        <action
            android:id="@+id/action_question_to_question"
            app:destination="@id/quizQuestion"/>
        <action
            android:id="@+id/action_question_to_quiz"
            app:destination="@id/leaderboard"/>
    </fragment>
</navigation>
